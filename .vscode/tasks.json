{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "cppbuild",
          "label": "bulid all CPPs int PROGRAM.EXE",
          "command": "g++",
          "args": [
            "-fdiagnostics-color=always",

            "-mwindows",
            "-lgdi32",
            "-luser32",
            
            "-g",
            "src/*.cpp",

            "-o",
            "built\\PROGRAM.exe",
            "resources\\icon.res"
          ],
          "options": {
            "cwd": "${workspaceFolder}"
          },
          "problemMatcher": ["$gcc"],
          "group": {
            "kind": "build",
            "isDefault": true
          },
          "detail": "Task generated by Debugger.",
          "dependsOn": ["Build Resource File"]
        },

        {
          "label": "Build Resource File",
          "type": "shell",
          "command": "windres",
          "args": [
            "resources/icon.rc",
            "-O",
            "coff",
            "-o",
            "resources/icon.res"
          ],
          
          
          "options": {
            "cwd": "${workspaceFolder}"
          },
        }
  ]
}